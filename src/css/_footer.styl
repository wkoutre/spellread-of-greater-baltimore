@media only screen and (min-device-width: 1367px)		
  #address
  	{$link-style}

  .footer
  	{$flex-row-wrap}
  	position fixed
  	width 100vw
  	padding 1vh 0 2.5vh 0
  	bottom 0
  	left 0
  	background-color $white
  	font-size 8vmin
  	justify-content space-around
  	& > div
  		{$flex-row-wrap}
  		justify-content space-between
  		font-size 20%
  		// flex-wrap wrap
  		flex 0 1 92.5%
  		// height 95%
  		// border 1px solid red
  	& a
  		{$link-style}
  		
  .footer-section
  	// border 2px solid blue
  	{$flex-row-wrap}
  	height 100%
  	flex 1 1 15%
  	justify-content space-between
  	// align-items center
  	// justify-content center
  	// border 1px solid blue
  	& > *:not(h4)
  		// border 1px solid blue
  		font-family $content
  		flex 0 1 100%
  		align-self flex-start
  		text-align center
  	& h4
  		padding-bottom 0.5vmin
  		font-size 1.5vmin

  .nav-links
  	// border 1px solid blue
  	{$flex-row-wrap}
  	flex 5 5 20%
  	height 100%
  	justify-content center
  	align-items center
  	// border 1px solid blue
  	& h4
  		flex 1 1 100%
  		font-size 1.5vmin
  	& ul
  		// border 1px solid blue
  		display flex
  		flex 0 1 75%
  		justify-content center
  		& *
  			flex 0 1 20%
  			margin-right 1vmin

  .footer-title
  	font-family $heading
  	text-align center
  	color $dark-purple
  	align-self flex-start
  	// font-size 1.5vmin
  	flex 1 1 100%
  	// &-section
  		
  #Copyright
  	height 6vmin
  	align-self center
  	display flex
  	align-items center
  	justify-content center
