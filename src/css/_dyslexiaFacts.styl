.dyslexia-facts-wrapper
	{$flex-row-wrap}
	justify-content space-around
	align-items center
	width 90%
	& > div
		// border 1px solid white
		height 47.5%
		{$flex-row-wrap}
		justify-content center
		align-items flex-start
	& ul
		{$p-style}
	& h4
		text-align center
		flex 0 1 100%
		height 15%
		& > span
			color $dark-purple
	& ul, p
		overflow-y auto
		height 75%
		& li
			flex 0 1 100%
			{$list-color-alternate}
			// align-self flex-start
		& > span
			color $dark-purple
			font-weight bold
	& ul
		{$flex-row-wrap}
		
.vertical-line
	border 0.25vw solid $white
	
.what-do-you-know
	flex 0 1 55%

.signs-and-indicators
	flex 0 1 35%

.reading-isnt-difficult
	flex 0 1 55%
	align-items center
	& > p
		max-height 70%
		{flex-row-wrap}
		align-items center
	& > button
		& a
			border none
			text-decoration none
			font-size 1rem
			color $dark-purple

.progress
	flex 0 1 35%
	& ul
		align-self flex-start
	& li
		{$flex-row-wrap}
		align-items center
		justify-content  center
		// flex 0 1 75%
		// border 1px solid white


	

