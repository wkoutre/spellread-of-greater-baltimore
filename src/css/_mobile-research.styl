@media only screen and (max-device-width: 767px)
	.research
		height 100%
		{$flex-row-wrap}
		justify-content center
		font-size 3rem
		@media screen and (orientation: landscape)
			font-size 2.5rem
		& > button
			{$button-style}
			flex 0 1 75%
			font-size 1.1em
			height 35px
		
	.research-content
		height 70%
		{$flex-row-wrap}
		justify-content center
		font-family $content
		& > h2
			flex 0 1 100%
			// border 1px solid white
			text-align center
			font-size 1.35em
		& > div
			flex 0 1 90%
			height 100%
			{$flex-row-wrap}
			align-items center
			justify-content center
			// border 1px solid blue
			& img,
			& iframe
				// flex 0 1 70%
				height 30vmax
			& > div
				flex 0 1 100%
				{$flex-row wrap}
				height 100%
				align-items center
				// border 1px solid green
				justify-content center
				& > h3
					flex 0 1 100%
					font-size 0.8em
					& > a
						{$link-style}
						font-family $heading
				& > blockquote
					flex 0 1 80%
					font-size 0.9em
					
