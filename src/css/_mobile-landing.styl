@media only screen and (max-device-width: 767px)
	.landing-wrapper
		justify-content center
	.landing
		flex 0 1 90%
		height 100%
		{flex-row-wrap}
		justify-content center
		font-size 3.5rem
		align-items space-around
		& > blockquote
			font-size 0.9em
			flex 0 1 90%
			{$flex-row-wrap}
			justify-content center
			align-items flex-end
			text-align center
			min-height 70%
			max-height 80%
			color $white
			// border 1px solid white
			& > cite
				font-size 0.9em
				& a
					{$link-style}
					color $light-yellow
					border-bottom 1px dashed $light-purple
					
		& > a
			flex 0 1 50%
			text-decoration none
			// border 1px solid white
			{$flex-row}
			justify-content center
			align-items center
			height 20%
			& > span
				flex 0 1 10%
				{$link-style}
				color $white
