@media only screen and (max-device-width: 1024px)
	.landing-wrapper
		justify-content center
		align-items center
	.landing
		flex 0 1 90%
		height 80%
		{$flex-row-wrap}
		justify-content center
		font-size 3.5rem
		align-items space-around
		align-self flex-start
		& > blockquote
			font-size 0.9em
			flex 0 1 95%
			{$flex-row-wrap}
			justify-content center
			// align-items flex-end
			text-align center
			min-height 70%
			// max-height 80%
			color $white
			// border 1px solid white
			& > cite
				font-size 0.8em
				& a
					{$link-style}
					color $light-yellow
					border-bottom 1px dashed $light-purple
					
		& > a
			flex 0 1 auto
			text-decoration none
			{$flex-row}
			justify-content center
			align-self flex-end
			& > span
				{$link-style}
				flex 0 1 10%
				color $light-purple
