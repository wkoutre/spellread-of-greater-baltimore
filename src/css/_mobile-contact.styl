@media only screen and (max-device-width: 1024px)
	$input-style =
		width 100%
		font-family $content
		font-size 3rem
		border none
		background-color $light-purple
		border-radius 5px
		padding 3px
		margin 2px
	.contact-text-pic
		display none
	.contact-wrapper
		{$flex-row-wrap}
		justify-content center
		font-size 3rem
		& > h1
			flex 0 1 100%
			text-align center
			height auto
			align-self center
		& form
			// max-height 80%
			{$flex-col-wrap}
			align-items center
			// border 1px solid white
			& > *
				align-items center
				justify-content center
				width 100%
				// border 1px solid red
			& > div > span
				display none
			& input
				{$input-style}
				&:focus
					background-color $white
					outline none
			& textarea
				{$input-style}
				&:focus
					background-color $white
					outline none
			& button
				align-self flex-start
				{$button-style}
				{$flex-row}
				justify-content center
				align-items center
				flex 0 1 auto
				margin-bottom 50px
				& > span
					text-align center
					flex 0 1 10%
					height 100%
					color $dark-purple
					font-size 2.5rem
		
