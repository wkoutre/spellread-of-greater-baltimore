@media only screen and (max-device-width: 1024px)
	$input-style =
		width 100%
		font-family $content
		font-size 2rem
		border none
		background-color $light-purple
		border-radius 5px
		padding 5px
		
	.contact-text-pic
		display none
	.contact-wrapper
		{$flex-row-wrap}
		justify-content center
		align-items center
		font-size 3rem
		& > h1
			@media only screen and (max-device-width: 1024px) and (orientation: portrait)
				display none
	.contact-form
		max-height 90%
		{$flex-col-wrap}
		align-items center
		justify-content space-around
		width 90%
		// border 1px solid white
		& > *
			width 100%
			// border 1px solid red
		& > div > span
			display none
		& > div
			{$flex-row-wrap}
			justify-content center
			width 100%
			flex 0 1 5%
			margin 2px
		& input, textarea
			{$input-style}
			&:focus
				background-color $white
				outline none
		& > button
			align-self flex-end
			{$button-style}
			{$flex-row}
			justify-content center
			align-items flex-end
			flex 0 1 auto
			& > span
				text-align center
				flex 0 1 10%
				color $dark-purple
				font-size 2.5rem
	.comment-box
		height 40%
		
@media only screen and (max-device-width: 1024px) and (orientation: landscape)
	.contact-form
		max-height 70%
		{$flex-col-wrap}
		align-items space-around
		justify-content center
		width 90%
		& > div:not(.comment-box)
			width auto
			margin-right 30px
			order 1
		& > button
			order 2
			{$button-style}
			{$flex-row}
			flex 0 1 auto
			max-width 20%
			margin-top 5%
			& > span
				text-align center
				flex 0 1 10%
				color $dark-purple
				font-size 2.5rem
		// border 2px solid black
		// border 1px solid white
	.comment-box
		order 4
		width 50%
