@media only screen and (max-device-width: 767px)
	.dyslexia-facts-wrapper
		font-size 3rem
		{$flex-row-wrap}
		justify-content center
		align-items space-around
		& > div
			flex 0 1 90%
			margin-bottom 20px
			{$flex-row-wrap}
			justify-content  center
			& h4
				flex 0 1 100%
				font-size 1.3em
				text-align center
				margin-bottom 10px
			& ul
				font-size 0.8em
			& li
				{$list-color-alternate}
				padding 5px
			& span
				color $dark-purple
			& p
				font-size 0.9em
				line-height 1.2em
				text-align justify
			& button
				flex 1
				{$button-style}
				height 40px
				margin-top 30px
				margin-bottom 50px
				& > a
					font-family $content
					text-decoration none
					font-size 2em
	.what-do-you-know
		order 1
	.vertical-line
		order 10
	.signs-and-indicators
		order 2
	.reading-isnt-difficult
		order 5
	.progress
		order 4
