@media only screen and (min-width: 1367px)
	.success-wrapper
		{$flex-row-wrap}
		justify-content center
		align-items center
		& > button
			{$button-style}
			flex 0 1 30%
			align-self flex-start

	.success-content
		display flex
		flex-wrap wrap
		align-items space-around
		justify-content space-around
		height 85%
		// border 2px solid white

	.story-container
		// border 1px solid red
		flex 0 1 47.5%
		height 49.5%
		display flex
		flex-wrap wrap
		// justify-content center
		& h2
			color $white
			// border 1px solid blue
			flex 1 1 90%
			// max-height 10%
			align-self center
			display flex
			align-items center
			justify-content center
		& p
			overflow-y auto
			text-align justify
			height 60%
			// display flex
			// align-items flex-start
			align-self flex-start
			flex 0 1 100%
