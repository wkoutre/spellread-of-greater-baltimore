@media only screen and (max-device-width: 767px)
	.success-wrapper
		{$flex-row-wrap}
		justify-content center
		align-items center
		height 100%
		& > button
			{$button-style}
			flex 0 1 75%
			font-size 3rem
			margin-bottom 15vh
			height 10vh
			order 10
	.success-content
		// height 100%
		{$flex-row-wrap}
		flex 0 1 100%
		justify-content center
		align items space-around
		font-size 3rem
		
	.story-container
		flex 0 1 90%
		{$flex-row-wrap}
		justify-content center
		& > h2
			font-size 1.5em
			flex 0 1 100%
			text-align center
			margin-bottom 4vh
		& > p
			font-size 01em
			line-height 1.2em
			flex 0 1 95%
			text-align justify
			margin-bottom 6vh
		
