.why-spellread-works
	display flex
	flex-direction column
	align-items center
	justify-content center
	flex-wrap wrap
	flex 0 1 100%
	height 100%
	// border 4px dashed orange
	overflow-y auto
	@media (orientation: portrait)
		flex-direction row
		justify-content space-around

.why-sr-works-content
	display flex
	justify-content center
	align-items center
	// border 4px dashed red
	// align-items space-between
	flex 0 1 48%
	width 32.5%
	@media (orientation: portrait)
		flex 0 1 47.5%
		height 33%
	// align-items center
	& > div
		display flex
		justify-content center
		flex-wrap wrap
		height 100%
		// border 2px dashed $yellow
		& > h5
			flex 1 1 100%
			text-align center
			align-self flex-start
			// border 2px dashed $yellow
			// justify-content
			
		& p
			// max-height 95%
			flex 0 1 90%
			align-self flex-start
			height 80%
			overflow-y auto
			// border 1px solid white
		& img
			max-height 80%
			max-width 100%
			align-self center
			@media (orientation: portrait)
				align-self flex-start

.bottom-item
	position absolute
	bottom 12.5%
	font-size 3vmin
	width 50%
	text-align center
	color $white
	@media (orientation: portrait)
		bottom 8%

.btn-why-sr-works
	position absolute
	bottom 12.5%
	left 37.5%
	width 25%
	height 5%
	font-size 2vmin
	color $link-color
	align-self flex-end
	order 1
	margin 0
	@media (orientation: portrait)
		bottom 8%
