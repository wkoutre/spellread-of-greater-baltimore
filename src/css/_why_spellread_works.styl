.why-spellread-works
	{$flex-col-wrap}
	align-items center
	justify-content space-around
	flex 0 1 100%
	height 100%
	// border 4px dashed orange
	overflow-y auto
	
.why-sr-works-content
	{$flex-row-wrap}
	justify-content center
	align-items center
	// border 4px dashed red
	// align-items space-between
	flex 0 1 45%
	width 32.5%
	// align-items center
	& > div
		display flex
		justify-content center
		flex-wrap wrap
		height 100%
		// border 2px dashed $yellow
		& > h5
			flex 1 1 100%
			text-align center
			align-self flex-start
			// border 2px dashed $yellow
			// justify-content
			
		& p
			// max-height 95%
			flex 0 1 90%
			align-self flex-start
			height 80%
			overflow-y auto
			// border 1px solid white
		& img
			max-height 80%
			max-width 100%
			align-self center
			
.btn-why-sr-works
	{$button-style}
	position absolute
	bottom 12.5%
	left 37.5%
	width 30%
	height 5%
	align-self flex-end
	order 1
	margin 0
			
	
.bottom-text
	// position absolute
	font-size 2.5rem
	flex 0 1 10%
	order 10
	text-align center
	color $white
