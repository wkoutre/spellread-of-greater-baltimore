@media only screen and (min-device-width: 768px)
	.why-spellread-works
		{$flex-row-wrap}
		justify-content center
		align-items center
		flex 0 1 100%
		height 100%
		// border 4px dashed orange
		overflow-y auto
		
	.why-sr-works-content
		{$flex-row-wrap}
		justify-content center
		align-items center
		// border 4px dashed red
		// align-items space-between
		flex 0 1 30%
		height 45%
		transition opacity 0.5s
		// align-items center
		& > div
			{$flex-row-wrap}
			align-items center
			justify-content center
			height 100%
			// border 2px dashed $yellow
			& > h5
				flex 1 1 100%
				text-align center
				align-self flex-start
				// border 2px dashed $yellow
				// justify-content
				
			& p
				// max-height 95%
				flex 0 1 90%
				align-self flex-start
				height 80%
				overflow-y auto
				// border 1px solid white
			& img
				max-height 80%
				max-width 100%
				align-self flex-start
				
	.btn-why-sr-works
		{$button-style}
		flex 0 1 35%
		order 10
			
	.bottom-text
		// position absolute
		font-size 1.5rem
		flex 0 1 75%
		order 10
		text-align center
		color $white
