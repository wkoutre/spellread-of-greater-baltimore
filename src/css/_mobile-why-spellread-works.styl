@media only screen and (max-device-width: 1024px)
	.why-spellread-works
		& button
			display none
		{$flex-row-wrap}
		justify-content center
		font-size 3rem
		& > div
			flex 0 1 90%
			{$flex-row-wrap}
			justify-content  center
			margin-bottom 20px
			& > div
				flex 0 1 95%
				{$flex-row-wrap}
				justify-content center
				& > h5
					font-size 1.5em
					flex 0 1 100%
					text-align center
					margin 30px 0 20px 0
				& > p
					flex 0 1 90%
					text-align justify
					font-size 1em
					line-height 1.3em
			&:first-child h5
				margin-top 0
				
	#why-sr-works-5 p
		padding-bottom 12.5vh
			
	.bottom-text
		display none

$pheight = 22.5rem
$lheight = 25rem

#why-sr-works-2
	& > div
		& > img
			margin-top 10px
			@media only screen and (max-device-width: 1024px) and (orientation: portrait)
				height $pheight
			@media only screen and (max-device-width: 1024px) and (orientation: landscape)
				height $lheight
				
#why-sr-works-4
