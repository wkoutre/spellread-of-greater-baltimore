.research
	display flex
	justify-content center
	flex-wrap wrap
	flex 0 1 95%
	height 100%
	// border 4px dashed red
	align-items center
	& > button
		{$button-style}
		align-self flex-start
		
	// overflowY scroll
	& > *
		// border 2px dashed lime

.research-content
	// border 4px dashed blue
	display flex
	justify-content center
	flex-wrap wrap
	flex 1 1 90%
	height 90%
	// align-items center
	& h1
		// border 4px dashed blue
		text-align center
		flex 1 1 100%
		align-self flex-end
	& hr
		flex 0 1 80%

	& > div
		flex 1 1 90%
		display flex
		justify-content center
		height 75%
		align-items center
		align-self center
		overflow-y auto
		// border 1px solid white
		& div
			// border 1px solid green
			color $white
			max-height 90%
			& blockquote
				font-size 3.5rem
				padding 3.5rem
				font-family $content
				text-align justify
			& a
				{$link-style}
				font-family $heading
		& > img
			border-radius 5px
			border 2px solid $dark-purple
			max-width 100%
			max-height 95%
			box-shadow -0.5rem 0.5rem 1rem $dark-purple
		& > iframe
			border-radius 5px
			flex 0 1 50%
			height (50% * (16/9))
