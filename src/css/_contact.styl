@media only screen and (min-device-width: 1025px)
	$page-div-flex = 
		display flex
		flex 0 1 45%
		height 75%

	$input-style = 
		background-color $light-purple
		font-family $content
		font-size 2.5vmin
		outline none
		border-radius 5px
		border 4px solid $light-purple
		padding 1vmin
		transition all 0.3s
		height 50%
		&:focus
			background-color $white
			border 4px solid $white
			
	$col-input-style = 
		background-color $light-purple
		font-family $content
		font-size 2.5vmin
		outline none
		border-radius 5px
		border 4px solid $light-purple
		padding 1vmin
		transition all 0.3s
		&:focus
			background-color $white
			border 4px solid $white

	$span-style = 
		{$heading-style}
		flex 0 1 30%
		font-size 2.5vmin
		text-align right
		margin-right 3%

	.contact-wrapper
		justify-content center
		align-items center
		{$flex-row-wrap}
		& h1
			flex 1 1 100%
			text-align center

	.contact-text-pic
		{$page-div-flex}
		{$flex-row-wrap}
		justify-content center
		align-items center
		& > p
			flex 0 1 80%
			max-height 30%
			text-align justify
			font-size 1.5rem
			& span
				color $dark-purple
				font-weight bold
		& > figure	
			{$flex-row-wrap}
			// border 1px solid white
			flex 0 1 90%
			height 55%
			justify-content center
			align-items center
			& > img
				flex 0 1 30vmin
				height 25vmin
				border 3px double $light-purple
				border-radius 5px
			& > figcaption
				flex 0 1 100%
				font-family $content
				font-size 2.5vmin
				color $white
				display flex
				justify-content center
			
	.contact-form
		{$page-div-flex}
		{$flex-col-wrap}
		align-items space-around
		justify-content space-around
		& > div:not(.comment-box)
			flex 0 1 5%
			{$flex-row-wrap}
			align-items center
			& > span
				{$span-style}
			& > input
				{$input-style}
				flex 1 1 50%
		& > button
			{$button-style}
			flex 0 1 10%

	.comment-box
		flex 0 1 40%
		display flex
		& > span
			{$span-style}
		& > textarea
			flex 1 1 50%
			{$col-input-style}
			resize none
